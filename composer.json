{
    "name": "qmas/laravel-metadata-trait",
    "description": "Add HasMetadata trait to Laravel model",
    "keywords": [
        "qmas",
        "laravel-metadata-trait"
    ],
    "homepage": "https://github.com/webcp/laravel-metadata-trait",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "QMAS",
            "email": "lienhe@qmas.vn",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1",
        "illuminate/support": "5.7.*"
    },
    "require-dev": {
        "orchestra/testbench": "3.8.*",
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Webcp\\LaravelMetadataTrait\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Webcp\\LaravelMetadataTrait\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
